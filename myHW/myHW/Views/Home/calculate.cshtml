@model myHW.Models.AccountBook
@using myHW.Helpers
@using myHW.Models
@{
    ViewBag.Title = "calculate";
}

<div class="well">

@using (Html.BeginForm("calculate_Add", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
  
    <div class="form-group">
        <label for="category" class="col-sm-2 control-label">類別</label>
        <div class="col-sm-10">
            @Html.DropDownListEnum("Categoryyy", typeof(CategoryyyType),"請選擇", new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Amounttt, new { @class = "form-control", id = "money", placeholder = "金額" })
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Dateee, new {@class = "form-control", id = "date", placeholder = "日期"})
                @*@Html.TextBoxFor(m => m.Dateee, new { @type = "date",@class = "form-control", id = "date", placeholder = "日期"})*@
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Remarkkk, new { @class = "form-control", id = "description" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
}
    @*</form>*@
</div>

@Html.Action("calculate_Detail")